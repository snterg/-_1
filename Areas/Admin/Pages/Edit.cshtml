@page "{id:int}"
@model ЛР_1.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.studId" />
            <div class="form-group">
                <label asp-for="Course.Firstname" class="control-label"></label>
                <input asp-for="Course.Firstname" class="form-control" />
                <span asp-validation-for="Course.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Lastname" class="control-label"></label>
                <input asp-for="Course.Lastname" class="form-control" />
                <span asp-validation-for="Course.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Sr_ball" class="control-label"></label>
                <input asp-for="Course.Sr_ball" class="form-control" />
                <span asp-validation-for="Course.Sr_ball" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Course.Image))
                {
                    <img src=~/Images/@Model.Course.Image
                         alt="NoSuchFile" width="150" />

                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="Course.GroupId" class="control-label"></label>
                    <select asp-for="Course.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                    <span asp-validation-for="Course.GroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts{
    <script src="~/js/bs-custom-file-input.js"></script>

    <script>
bsCustomFileInput.init();
    </script>
}
