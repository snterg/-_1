@page
@model ЛР_1.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Панель администрирования";
}

<h1>Панель администрирования</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-primary btn-rounded">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Sr_ball)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>   
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sr_ball)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.studId"
                   class="btn btn-primary btn-rounded">
                    <span class="fas fa-edit"></span>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.studId"
                   class="btn btn-danger btn-rounded">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
