@{
}
@model IEnumerable<ЛР_1.Models.CartItem>
@{
    ViewData["Title"] = "Index";
}
<h1>Корзина</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.studcart.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studcart.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studcart.GroupId) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/Images/@item.studcart.Image" alt="No image"
                     width="100" />
            </td>
            <td>
                @Html.DisplayFor(m => item.studcart.Firstname)
            </td>
            <td>
                @Html.DisplayFor(m => item.studcart.Lastname)
            </td>
            <td>
                @Html.DisplayFor(m => item.studcart.GroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>

                <a asp-controller="Cart"
                   asp-action="Delete"
                   asp-route-id="@item.studcart.studId"
                   class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i>                
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>